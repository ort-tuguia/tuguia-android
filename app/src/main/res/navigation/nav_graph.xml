<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/login">

    <fragment
        android:id="@+id/login"
        android:name="ort.tp3_login.fragments.login"
        android:label="login" >
        <action
            android:id="@+id/action_login_to_register"
            app:destination="@id/register"
            app:popUpTo="@id/action_login_to_register"
            app:popUpToInclusive="true"/>

        <action
            android:id="@+id/action_login_to_containerFragmentGuia"
            app:destination="@id/containerFragmentGuia" />
        <action
            android:id="@+id/action_login_to_home_turista"
            app:destination="@id/home_turista" />
    </fragment>
    <fragment
        android:id="@+id/register"
        android:name="ort.tp3_login.fragments.register"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/action_register_to_login"
            app:destination="@id/login" />
    </fragment>
    <fragment
        android:id="@+id/containerFragmentGuia"
        android:name="ort.tp3_login.fragments.containerFragmentGuia"
        android:label="containerFragmentGuia" />
    <fragment
        android:id="@+id/home_turista"
        android:name="ort.tp3_login.fragments.home_turista"
        android:label="home_turista" >
        <action
            android:id="@+id/action_home_turista_to_login"
            app:destination="@id/login" />
    </fragment>
</navigation>